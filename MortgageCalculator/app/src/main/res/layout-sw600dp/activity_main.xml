<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewCalculating"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Principal"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A59D9D"
            android:ems="10"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textAnnual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Annual Interest Rate"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextAnnual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A59D9D"
            android:ems="10"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textTerm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Term"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTerm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A59D9D"
            android:ems="10"
            android:inputType="number"
            android:minHeight="48dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textPMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PMI"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextPMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A59D9D"
            android:ems="10"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textProperty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property Tax"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextProperty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A59D9D"
            android:ems="10"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textHomeOwners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Homeowners Insurance"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextHomeOwners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A59D9D"
            android:ems="10"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:onClick="calculate"
            android:text="Calculate Mortgage" />

        <LinearLayout
            android:id="@+id/results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textEstimate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textEstimate"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textEstimateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estimated Monthly Mortgage"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="close"
                android:text="Close" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
